<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.sihaiwanlian.baseproject.widget.XEditText
                app:x_clearDrawable="@drawable/close_2"
                android:id="@+id/register_et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_35"
                android:background="@drawable/btn_register_bg"
                android:drawableLeft="@drawable/name_c"
                android:drawablePadding="@dimen/dp_10"
                android:hint="请输入您的真实姓名"
                android:maxLength="20"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:textColorHint="@color/_999"
                android:textSize="@dimen/text_size_14"
                app:x_disableClear="false"
                tools:ignore="RtlHardcoded"/>

            <com.sihaiwanlian.baseproject.widget.XEditText
                android:id="@+id/register_et_idcard"
                android:layout_width="match_parent"
                app:x_clearDrawable="@drawable/close_2"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/btn_register_bg"
                android:drawableLeft="@drawable/id_c"
                android:drawablePadding="@dimen/dp_8"
                android:hint="请输入您的身份证号码"
                android:maxLength="18"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:textColorHint="@color/_999"
                android:textSize="@dimen/text_size_14"
                app:x_disableClear="false"
                tools:ignore="RtlHardcoded"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_horizontal"
                android:text="注：请务必输入真实的姓名和身份证号码"
                android:textColor="#FB143F"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

    </RelativeLayout>


    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/realNameBtn"
        style="@style/btn_size20_white_margin60"
        android:layout_marginBottom="@dimen/dp_25"
        android:background="@drawable/bg_botton_shape_selector"
        android:text="@string/next"/>
</LinearLayout>