<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.changjiangev.cjev">

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:theme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.changjiangev.cjev.activitys.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/splash_theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.changjiangev.cjev.activitys.LoginActivity"
            android:configChanges="screenSize"/>
        <activity android:name="com.changjiangev.cjev.activitys.RealNameActivity"/>
        <activity
            android:name="com.changjiangev.cjev.activitys.ForgetPwdActivity"/>
        <activity
            android:name="com.changjiangev.cjev.activitys.RegisterActivity"/>
    </application>

</manifest>