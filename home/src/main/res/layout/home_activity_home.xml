<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/main_titleBar"
        layout="@layout/home_titlebar"/>

    <com.sihaiwanlian.baseproject.widget.ViewPagerCompat
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include layout="@layout/include_line"/>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        app:bb_activeTabAlpha="1"
        app:bb_activeTabColor="@color/_0085d0"
        app:bb_inActiveTabColor="@color/_666"
        app:bb_tabXmlResource="@xml/home_bottombar_tabs"/>
</LinearLayout>
